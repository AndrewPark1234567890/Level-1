	public void makeButtons() {
		JFrame j1 = new JFrame();
		j1.setSize(200,100);
		j1.setVisible(true);
		JPanel p1 = new JPanel();
		j1.add(p1);
		JButton b1 = new JButton();
		JButton b2 = new JButton();
		j1.add(b1);
		j1.add(b2);
		p1.setVisible(true);
